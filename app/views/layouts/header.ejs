  <!-- Top nav: logo + main links -->
  <nav class="navbar navbar-expand-lg navbar-mystyle">
    <div class="container">
      <a class="navbar-brand" href="/">MyStyle Planner</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="mainNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/items">Planner</a>
          </li>

          <% if (session && session.user) { %>
            <li class="nav-item">
              <span class="nav-link disabled">Hi, <%= session.user.firstName %></span>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signout">Sign Out</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/signin">Sign In</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signup">Sign Up</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
