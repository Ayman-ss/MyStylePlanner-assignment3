<%- include('../layouts/header') %>

<section class="section">
  <div class="container">
     <!--  Using the same auth-card layout as signup. Keeps all the authentication pages consistent and centered.-->
    <div class="auth-card">
      <h1 class="section-heading mb-3">Sign in</h1>

      <!-- If the controller sends an "error" variable (e.g. wrong password),
        this block will show a red alert message at the top of the form.
        This helps with basic login validation feedback.-->

      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <!-- Username input field -->
      <form method="post" action="/signin">
        <div class="mb-3">
          <label class="form-label">Username</label>
          <input class="form-control" type="text" name="username" required>
        </div>

        <!-- Password input field -->
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input class="form-control" type="password" name="password" required>
        </div>

         <!-- Submit button to log the user in -->
        <button type="submit" class="btn btn-primary-mystyle w-100 mt-2">Sign in</button>
      </form>

      <p class="mt-3 mb-0 text-center">
        Donâ€™t have an account yet?
        <a href="/signup">Create one here</a>.
      </p>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>
